<%- include("header") -%>

<div
	class="box"
	id="heading"
>
	<h1><%= listTitle %></h1>
</div>

<div class="box">
	<% newListItems.forEach((todo)=>{ %>
	<form
		action="/delete"
		method="post"
	>
		<div class="item">
			<input
				type="checkbox"
				onChange="this.form.submit();"
				name="checkbox"
				value="<%=todo._id %>"
			/>
			<p><%= todo.todo %></p>
		</div>
	</form>
	<% }) %>

	<form
		class="item"
		action="/"
		method="post"
	>
		<input
			type="text"
			name="newItem"
			placeholder="New Item"
			autocomplete="off"
		/>
		<button
			type="submit"
			name="list"
		>
			+
		</button>
	</form>
</div>

<%- include("footer") -%>
